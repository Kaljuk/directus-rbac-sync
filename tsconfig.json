{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": ["es2021"],
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "extensions", "tests"]
}
